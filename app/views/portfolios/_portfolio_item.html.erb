<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>" >
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>
    <div class="card-body">
      <p class="card-text">
        <span><%= portfolio_item.title %></span>
        <p class="mute"><%= portfolio_item.subtitle %></p>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", portfolio_show_path(portfolio_item) %></button>
          <% if logged_in?(:site_admin) %>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item) %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete Post', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% end %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>